extends layout

block content
  h1(align='center') WELCOME ADMIN

  div(align='right')
   a(href = "/dashboard/admin") Dashboard
   |&nbsp;&nbsp;<font size="5">|</font>&nbsp;&nbsp;
   a(href = "/logout") logout
  hr

  h2(align = "center") ADMIN SEARCH

  div(align = "center")
   form(action = "adminSearch" method="POST")
    input(type="text" class = "search_box" placeholder = "Enter the book name here....." name="name" required)
    input(type="submit" class = "search-button" value="SEARCH" required)
  
   if(books)
    div
     if(books.length == 0)
      p NOT AVAILABLE
 
     if(books.length > 0)
      table(class='search_table')
       tr
        th BOOK NAME
        th AVAILABLE
        th TOTAL

       div(class = "table_alignment")
        each book in books
         tr
          td
           a(href = "/bookHistory/#{book.name}") #{book.name}
          td <font size="5">#{book.available}</font>
          td <font size="5">#{book.count}</font>